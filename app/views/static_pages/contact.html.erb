<body>
	<div class="container-fluid">
		<div class="header">
			<h2>Contacting Microverse Scooters</h2>
		</div>
		<div class="row">
		<div class="col-md-6">
			<p><span class="glyphicon glyphicon-phone"></span>: (802)535-7841</p>
			<p><span class="glyphicon glyphicon-envelope"></span>: D_Jeffrey87@yahoo.com</p>
		</div>
		<%= flash[:notice] %>
		<%= form_tag("/static_pages/thank_you") do %>
				<div class="col-md-6">
					<div class="form-group">
						<%= text_field_tag :name, nil, class: "form-control", placeholder: "Your Full Name", required: true %>
					</div>
					<div class="form-group">
						<%= text_field_tag :email, nil, class: "form-control", placeholder: "Your Email Address", required: true %>
					</div>
					<div class="form-group">
						<%= text_area_tag :message, nil, class: "form-control", placeholder: "Your Message", required: true %>
					</div>
					<%= submit_tag "Send", class: "btn btn-default" %>
					<% end %>
				</div>
			</div>
	</div>
</body>